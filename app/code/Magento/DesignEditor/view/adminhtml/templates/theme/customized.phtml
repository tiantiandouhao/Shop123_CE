    $themeTitle = $block->escapeQuote($block->getTheme()->getThemeTitle());
?>

<li class="theme" id="theme-id-<?php echo $block->getTheme()->getId() ?>" data-widget-options="<?php echo $block->escapeHtml($block->getOptionsJson()); ?>">
