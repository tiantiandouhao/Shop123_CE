    <fieldset class="admin__fieldset hide_if_token_selected">
        <div id="<?php echo $_code ?>_store_in_vault_div" style="text-align:left;" class="">
            <input type="checkbox" title="<?php echo __('Save this card for future use') ?>" class="input-checkbox" id="<?php echo $_code ?>_store_in_vault" name="payment[store_in_vault]" value="1" />
